<%- include('../layouts/header.ejs'); -%>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-12">
      <h4 class="text-start mb-4">Job List</h4>
      <a href="/jobs/create" class="btn btn-secondary btn-md">+ Create Data</a>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Category</th>
            <th>Max Salary</th>
            <th>Min Salary</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% jobs.forEach((job, i) => { %>
          <tr>
            <td><%=i+1%></td>
            <td><%= job.name %></td>
            <td><%= job.category %></td>
            <td><%= job.max_salary %></td>
            <td><%= job.min_salary %></td>
            <td>
              <a
                href="/jobs/update/<%= job.id %>"
                class="btn btn-info btn-sm mr-2"
                ><i class="fas fa-edit"></i> Edit</a
              >
              <a href="/jobs/delete/<%= job.id %>" class="btn btn-danger btn-sm"
                ><i class="fas fa-trash"></i> Delete</a
              >
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%- include('../layouts/footer.ejs'); -%>
