<%- include('../layouts/header.ejs'); -%>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-12">
      <h4 class="text-start mb-4">Patient List</h4>
      <a href="/patients/create" class="btn btn-secondary btn-md"
        >+ Create Data</a
      >
      <table class="table table-striped">
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Service</th>
            <th>Clinic</th>
            <th>Visit Date</th>
            <th>Birth Date</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% patients.forEach((patient, i) => { %>
          <tr>
            <td><%=i+1%></td>
            <td><%= patient.patientName %></td>
            <td><%= patient.service %></td>
            <td><%= patient.clinic %></td>
            <td><%= patient.visitDate %></td>
            <td><%= patient.birthDate %></td>
            <td>
              <a
                href="/patients/update/<%= patient.patientId %>"
                class="btn btn-info btn-sm mr-2"
                ><i class="fas fa-edit"></i> Edit</a
              >
              <a
                href="/patients/delete/<%= patient.patientId %>"
                class="btn btn-danger btn-sm"
                ><i class="fas fa-trash"></i> Delete</a
              >
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%- include('../layouts/footer.ejs'); -%>
