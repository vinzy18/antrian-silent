<%- include('../layouts/header.ejs'); -%>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-12">
      <h4 class="text-start mb-4">Employee List</h4>
      <a href="/employees/create" class="btn btn-secondary btn-md"
        >+ Create Data</a
      >
      <table class="table table-striped">
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Job</th>
            <th>Age</th>
            <th>City</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% employees.forEach((employee, i) => { %>
          <tr>
            <td><%=i+1%></td>
            <td><%= employee.name %></td>
            <td><%= employee.job %></td>
            <td><%= employee.age %></td>
            <td><%= employee.city %></td>
            <td>
              <a
                href="/employees/update/<%= employee.id %>"
                class="btn btn-info btn-sm mr-2"
                ><i class="fas fa-edit"></i> Edit</a
              >
              <a
                href="/employees/delete/<%= employee.id %>"
                class="btn btn-danger btn-sm"
                ><i class="fas fa-trash"></i> Delete</a
              >
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%- include('../layouts/footer.ejs'); -%>
